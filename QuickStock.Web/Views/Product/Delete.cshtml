@model QuickStock.Domain.Entities.Product

@{
    ViewData["Title"] = "Eliminar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card border-danger mb-4">
    <div class="card-header bg-danger text-white">
        <h2 class="mb-0">¿Está seguro de eliminar este producto?</h2>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> Esta acción no se puede deshacer.
        </div>

        <div class="row mb-3">
            <div class="col-md-3 fw-bold">Nombre:</div>
            <div class="col-md-9">@Model.Name</div>
        </div>
        <div class="row mb-3">
            <div class="col-md-3 fw-bold">Talla:</div>
            <div class="col-md-9">@Model.Size</div>
        </div>
        <div class="row mb-3">
            <div class="col-md-3 fw-bold">Color:</div>
            <div class="col-md-9">@Model.Color</div>
        </div>
        <div class="row mb-3">
            <div class="col-md-3 fw-bold">Precio:</div>
            <div class="col-md-9">@Model.Price.ToString("C")</div>
        </div>
        <div class="row mb-3">
            <div class="col-md-3 fw-bold">Stock:</div>
            <div class="col-md-9">@Model.Stock</div>
        </div>
        <div class="row mb-3">
            <div class="col-md-3 fw-bold">Categoría:</div>
            <div class="col-md-9">@(Model.Category?.Name ?? "N/A")</div>
        </div>
    </div>
    <div class="card-footer">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirmar Eliminación
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Cancelar
            </a>
        </form>
    </div>
</div>