@model QuickStock.Domain.Entities.Product

@{
    ViewData["Title"] = "Crear Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Registrar Nuevo Producto</h2>

<div id="message-container"></div>

<form id="product-form" method="post" class="needs-validation" novalidate>
    <input type="hidden" name="Id" value="0" />

    <div class="mb-3">
        <label for="Name" class="form-label">Nombre</label>
        <input id="Name" name="Name" class="form-control" autocomplete="off" required />
        <div class="invalid-feedback">
            El nombre es obligatorio.
        </div>
    </div>

    <div class="mb-3">
        <label for="Size" class="form-label">Talla</label>
        <input id="Size" name="Size" class="form-control" autocomplete="off" required />
        <div class="invalid-feedback">
            La talla es obligatoria.
        </div>
    </div>

    <div class="mb-3">
        <label for="Color" class="form-label">Color</label>
        <input id="Color" name="Color" class="form-control" autocomplete="off" required />
        <div class="invalid-feedback">
            El color es obligatorio.
        </div>
    </div>

    <div class="mb-3">
        <label for="Price" class="form-label">Precio</label>
        <input id="Price" name="Price" type="number" step="0.01" min="0" class="form-control" autocomplete="off" required />
        <div class="invalid-feedback">
            El precio debe ser mayor o igual a 0.
        </div>
    </div>

    <div class="mb-3">
        <label for="Stock" class="form-label">Stock</label>
        <input id="Stock" name="Stock" type="number" min="0" class="form-control" autocomplete="off" required />
        <div class="invalid-feedback">
            El stock debe ser mayor o igual a 0.
        </div>
    </div>

    <div class="mb-3">
        <label for="CategoryId" class="form-label">Categoría</label>
        <select id="CategoryId" name="CategoryId" asp-items="ViewBag.Categories" class="form-select" required>
            <option value="">-- Selecciona una categoría --</option>
        </select>
        <div class="invalid-feedback">
            Debes seleccionar una categoría.
        </div>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <script src="~/js/product-api.js"></script>
    <script src="~/js/product-form.js"></script>
    <partial name="_ValidationScriptsPartial" />
}