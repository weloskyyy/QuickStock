@model List<QuickStock.Domain.Entities.Category>

@{
    ViewData["Title"] = "Categorías";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Listado de Categorías</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Nueva Categoría</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark text-center">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody class="text-center">
        @if (Model.Any())
        {
            foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning text-white me-2">Editar</a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-muted">No hay categorías registradas.</td>
            </tr>
        }
    </tbody>
</table>
