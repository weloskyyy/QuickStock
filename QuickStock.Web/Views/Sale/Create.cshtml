@model QuickStock.Domain.Entities.Sale

@{
    ViewData["Title"] = "Crear Venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear Nueva Venta</h2>

<form asp-action="Create" method="post" class="mt-4">
    <div class="mb-3">
        <label asp-for="ProductId" class="form-label">Producto</label>
        <select asp-for="ProductId" class="form-control" asp-items="ViewBag.Products">
            <option value="">-- Selecciona un producto --</option>
        </select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label">Cantidad</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UnitPrice" class="form-label">Precio Unitario</label>
        <input asp-for="UnitPrice" class="form-control" />
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
