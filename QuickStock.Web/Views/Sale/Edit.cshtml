@model QuickStock.Domain.Entities.Sale

@{
    ViewData["Title"] = "Eliminar Venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-danger mb-4">¿Estás seguro de que deseas eliminar esta venta?</h2>

<div class="border p-4 mb-3">
    <dl class="row">
        <dt class="col-sm-3">Producto</dt>
        <dd class="col-sm-9">@Model.Product?.Name</dd>

        <dt class="col-sm-3">Cantidad</dt>
        <dd class="col-sm-9">@Model.Quantity</dd>

        <dt class="col-sm-3">Total</dt>
        <dd class="col-sm-9">@Model.TotalAmount.ToString("C")</dd>
    </dl>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Sí, eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
